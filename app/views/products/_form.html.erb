<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :cost %>
  <%= f.number_field :cost, :class => 'text_field', :step => 0.01 %>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <%= f.submit %>
<% end %>
