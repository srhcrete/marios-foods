<%= render "layouts/errors", :object => @product %>

  <%= form_for @product do |f| %>
  <%= f.label :name, :class => 'product_form_label' %>
  <%= f.text_field :name, :class => 'product_form_field' %><br>
  <%= f.label :cost, :class => 'product_form_label' %>
  <%= f.number_field :cost, :class => 'product_form_field', :step => 0.01 %><br>
  <%= f.label :country, :class => 'product_form_label' %>
  <%= f.text_field :country, :class => 'product_form_field' %><br>
  <%= f.submit :submit, :class => 'product_form_button' %>
  <% end %>
