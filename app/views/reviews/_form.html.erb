<%= render "layouts/errors", :object => @review %>


<%= form_for [@product, @review] do |f| %>
  <%= f.label :author, :class => 'form_label'%>
  <%= f.text_field :author, :class => 'form_text_field' %>
  <%= f.label :content, :class => 'form_label'%>
  <%= f.text_area :content, :class => 'form_text_content', rows: 5 %>
  <%= f.label :rating, :class => 'form_label'%>
  <%= f.number_field :rating, :class => 'form_text_field' %><br>
  <%= f.submit :submit, :class => 'form_button' %>
<% end %>
